<bg xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>
	<vertical min-width='45' horizontal-fit='MinSize'>
		<toggle-setting text='Custom Songs' hover-hint='Whether the host has custom songs enabled' value='custom-songs' apply-on-change='true' bind-value='true' interactable='~is-host' />
		<toggle-setting text='Free Mod' hover-hint='Whether players can pick their own modifiers.' value='freemod' apply-on-change='true' bind-value='true' interactable='~is-host' />
		<toggle-setting text='Host Picks' hover-hint='Host picks the song to be played.' value='host-pick' apply-on-change='true' bind-value='true' interactable='~is-host' />
	</vertical>
</bg>